mixin para(x)
   .c19.target-dots= x

mixin tag-o(name)
   +para('<')
   .target-div.c18= name

mixin tag-c(name)
   +para('</')
   .target-div.c18= name
   +para('>')

mixin tag(name, value, end, selfClosing)
   +tag-o(name)
   block
   if selfClosing
      +para('/')
   +para('>')
   if value
      +space
      +text(value)
      +space
   if end
      +tag-c(name)


mixin atr(name, value)
   +space
   .c7.target-html-atr= name
   .c19.target-dots =
   .c21.target-html-atr-value= `"${value}"`

mixin text(name)
   .c19.target-html-text= name

