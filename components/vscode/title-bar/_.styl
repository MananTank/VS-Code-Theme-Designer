.title-bar
  grid-area title
  background-color var(--c10)
  color var(--c3)
  padding 0.7em 0
  text-align center
  position relative
  .title
    @media (max-width: 992px)
      opacity 0
  .vscode-icon
    width 1.2em
  .options
    display flex
    position absolute
    top 0
    left 0
    padding 0.7em 0
    .option
      margin-left 1em
