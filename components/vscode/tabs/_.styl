.tabs
  grid-area tabs
  display flex
  .tab
    padding 1em 1.8em
    border-right 1px solid var(--c10)
    border-bottom 1px solid var(--c10)
    background-color var(--c9)
    letter-spacing: 0.1em
    text-transform: uppercase
    &:last-of-type
      flex 1
      border-right none
    &.active
      background-color var(--c1)
      color var(--c3)
      border-bottom 1px solid var(--c4)
