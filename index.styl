@import url('https://fonts.googleapis.com/css2?family=Fira+Code:wght@400&display=swap');

.container
  display grid
  grid-template-columns: 2fr 1fr
  width 100%
  max-width 1300px
  grid-gap 30px
  margin 0 auto
  +on-sm()
    max-width 700px
    grid-template-columns: 1fr


body
  font-family     Arial
  padding 3em 2em
  font-size 9px
  min-height: 110vh
  +on-xs()
    font-size 7px

